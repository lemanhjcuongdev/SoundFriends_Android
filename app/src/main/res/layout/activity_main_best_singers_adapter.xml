<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="700px"
    android:layout_height="400px"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardCornerRadius="52px"
    android:layout_marginRight="10dp"
    android:layout_marginTop="10dp"
    android:layout_marginBottom="10dp"
    android:layout_marginLeft="2dp"
    tools:context=".adapter.Main_BestSingersAdapter">
    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent">
        <ImageView
            android:id="@+id/img_best_singer"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="@mipmap/ic_launcher_background"
            android:scaleType="centerCrop"/>
        <View
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#40000000" />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:layout_alignParentBottom="true">
            <TextView
                android:id="@+id/tv_singer_ranking"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="10"
                android:textStyle="bold"
                android:textColor="@color/white"
                android:gravity="center"
                android:textSize="200sp"/>
            <TextView
                android:id="@+id/tv_best_singer_name"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:ellipsize="marquee"
                android:text="Soobin Hoàng Sơn, Andree Right Hand, Binz Da Poet (aka. Xuân Đan)"
                android:textColor="@color/white"
                android:shadowColor="#80000000"
                android:gravity="start|center"
                android:maxLines="3"
                android:shadowRadius="5"
                android:shadowDx="3"
                android:shadowDy="3"
                android:textSize="20sp"
                android:textStyle="bold"
                android:layout_margin="10dp"/>
        </LinearLayout>
    </RelativeLayout>

</androidx.cardview.widget.CardView>
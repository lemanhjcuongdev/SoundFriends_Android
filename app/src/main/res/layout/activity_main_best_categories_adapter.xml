<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="400px"
    android:layout_height="200px"
    app:cardCornerRadius="52px"
    android:layout_marginRight="10dp"
    android:layout_marginTop="10dp"
    android:layout_marginBottom="10dp"
    android:layout_marginLeft="2dp"
    tools:context=".adapter.Main_BestCategoriesAdapter">
    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <ImageView
            android:id="@+id/img_best_category"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="@mipmap/ic_launcher_background"
            android:scaleType="centerCrop"/>
        <View
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#40000000" />
        <TextView
            android:id="@+id/tv_best_category"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ellipsize="marquee"
            android:text="Soobin Hoàng Sơn, Andree Right Hand, Binz Da Poet (aka. Xuân Đan)"
            android:textColor="@color/white"
            android:shadowColor="#80000000"
            android:maxLines="1"
            android:shadowRadius="5"
            android:shadowDx="3"
            android:shadowDy="3"
            android:textSize="24sp"
            android:textStyle="bold"
            android:layout_margin="10dp"
            android:textAlignment="center"
            android:layout_centerVertical="true"
            />
    </RelativeLayout>

</androidx.cardview.widget.CardView>
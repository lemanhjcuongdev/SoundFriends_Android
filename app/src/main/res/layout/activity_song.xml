<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:gravity="center_horizontal"
    tools:context=".song">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Ta là của nhau"
        android:textAllCaps="true"
        android:textSize="18sp"
        android:layout_marginTop="10dp"
        android:textStyle="bold"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Đông Nhi - Ông Cao Thắng"
        android:textSize="18sp"
        android:layout_marginTop="10dp"
        />

    <androidx.cardview.widget.CardView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:cardCornerRadius="12dp"
        android:layout_marginTop="38dp"
        >
        <ImageView
            android:layout_width="250dp"
            android:layout_height="250dp"
            android:src="@drawable/img"

            />
    </androidx.cardview.widget.CardView>

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        >
        <ImageView
            android:id="@+id/like"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:src="@drawable/like"
            android:layout_marginTop="30dp"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textlike"
            android:layout_marginTop="35dp"
            android:layout_toRightOf="@id/like"
            android:text="123"
            />
        <ImageView
            android:id="@+id/phonering"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:src="@drawable/phonering"
            android:layout_marginTop="30dp"
            android:layout_marginLeft="60dp"
            android:layout_toRightOf="@+id/like"
            />
        <ImageView
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:src="@drawable/download"
            android:layout_marginTop="30dp"
            android:layout_marginLeft="60dp"
            android:layout_toRightOf="@+id/phonering"
            />

    </RelativeLayout>

    <SeekBar
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:progress="40"

        />

    <RelativeLayout
        android:layout_width="300dp"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="00:00"

            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:text="00:00"
        />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:background="@color/white"
        >

        <TextView
            android:id="@+id/shuffle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Shuffle"
            android:textColor="@color/black" />

        <TextView
            android:id="@+id/previous"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/shuffle"
            android:paddingLeft="25dp"
            android:text="Previous"
            android:textColor="@color/black" />

        <TextView
            android:id="@+id/play_pause"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/previous"
            android:paddingLeft="25dp"
            android:text="Play/Pause"
            android:textColor="@color/black" />

        <TextView
            android:id="@+id/next"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/play_pause"
            android:background="@color/white"
            android:paddingLeft="25dp"
            android:text="Next"
            android:textColor="@color/black" />

        <TextView
            android:id="@+id/loop"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/next"
            android:background="@color/white"
            android:paddingLeft="25dp"
            android:text="Loop"
            android:textColor="@color/black"

            />

    </RelativeLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Bình luận"
        android:textSize="18dp"
        android:textStyle="bold"
        android:layout_gravity="left"
        android:paddingLeft="18sp"
        android:layout_marginTop="25dp"
        />

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"

        >
        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/avatar1"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:src="@drawable/avtar1"
            />

        <Button
            android:layout_width="250dp"
            android:layout_height="50dp"
            android:layout_alignParentBottom="false"
            android:layout_marginLeft="30dp"
            android:layout_toRightOf="@+id/avatar1"
            android:backgroundTint="@color/white"
            android:paddingLeft="25dp"
            android:text="Bình luận  ..."
            android:textColor="#A39F9F"
            android:textSize="13sp" />

    </RelativeLayout>

    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:id="@+id/bottomnavigation"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_gravity="bottom"
        android:layout_marginTop="20dp"
        app:menu="@menu/menu_bottom_nav"
        android:background="@color/pink"
        app:itemTextColor="@color/black"/>

</LinearLayout>